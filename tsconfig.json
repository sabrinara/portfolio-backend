{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@interfaces/*": [
        "interface/*"
      ]
    },
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ],
  "typeRoots": [
    "./node_modules/@types",
    "./src/types"
  ]
}